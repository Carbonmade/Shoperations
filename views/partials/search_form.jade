form.header.search(action="", method="get")
  input(type="search", placeholder="Keywords", name="q", value=results.params.q || '')
  ul.filters
    li State
    li!= linkTo('All', '/' + results.model.name.toLowerCase() + 's')
    - for(state in filters)
      - active = results.params.state === state || (!results.params.state && state === 'All')
      li!= linkTo(state, filters[state], {class: active ? 'active' : 'inactive'})
