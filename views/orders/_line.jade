tr
  td
    a(href="#")= line.description
    small= line.type
  td= "$" + line.unitPrice
  td= line.quantity
  - if(line.type === 'Sale')
    td= "$" + line.discount.amount
    td
      abbr(title=line.tax.schedule.rate*100 + "% - " + line.tax.schedule.jurisdiction.name)= "$" + line.tax.amount
  - else
    td
    td
  td
    - if(line.type === 'Sale')
      strong= "$" + (line.extendedPrice - line.discount.amount + line.tax.amount)
    - else
      strong= "$" + line.extendedPrice