h1 Package Details

table
  tr
    th Container
    td= package.container.description
  tr
    th Dimensions
    td= dimensions(package.container.dimensions)
  tr
    th Weight
    td= package.weight
  tr
    th Origin
    td 
      = package.origin.name
      br
      small!= address(package.origin.address, '<br />')
  tr
    th Destination
    td 
      = package.destination.name
      br
      small!= address(package.destination.address, '<br />')
  tr
    th Status
    td
      span.status= package.status