h1= title

form.search(action="", method="get")
  p
    select(name="status")
      optgroup(label="Package Status")
        option - Any status -
        option Open
        option Shipped
        option Delivered
    input(type="search", placeholder="Keywords")
    input(type="submit", value="Search!")

table
  thead
    tr
      th Tracking #
      th Shipment
      th Origin
      th Destination
      th Status
      th
  tbody
    - each package in packages
      td
        - if(package.status === 'Shipped')
          a(href="#")= package.trackingNumber
        - else
          small Not shipped
      td
        = package.shippingMethod.name
        br
        small= package.container.description
      td
        abbr(title=address(package.origin.address))= package.origin.name
      td
        abbr(title=address(package.destination.address))= package.destination.name
      td
        span.status= package.status
      td
        a(href="/packages/" + package.id) Details &raquo;