h1= title + " (" + results.totalRecords + ")"

form.search(action="", method="get")
  p
    input(type="search", placeholder="Keywords", name="q")

table
  thead
    tr
      th ID
      th Tracking #
      th Shipment
      th Origin 
      th Destination
      th Status
  tbody
    - each package in results.records
      tr
        td!= package.link()
        td!= package.trackingNumber ? package.trackingNumber : '<small>Not shipped</small>'
        td
          != package.shippingMethod ? package.shippingMethod.name : '<small>Unknown</small>'
          br
          small= package.container.description
        td!= package.origin ? package.origin.name : '<small>Unknown</small>'
        td!= package.destination ? package.destination.name : '<small>Unknown</small>'
        td!= status_label(package)